#include <iostream>
using namespace std;

int a[51];

int main(int argc, const char * argv[])
{
    int n,sum,T=1;
    while(cin>>n,n){
        sum = 0;
        for(int i = 0; i < n; i++){
            cin >> a[i];
            sum+=a[i];
        }
        
        int toget = sum/n;
        int res = 0;
        for(int i = 0; i < n; i++)
            res += max(0,a[i]-toget);
        
        cout << "Set #" << T++ << endl;
        cout << "The minimum number of moves is " << res << '.' << endl;
        cout << endl;
        
    }
    return 0;
}

