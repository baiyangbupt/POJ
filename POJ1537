#include <iostream>
#include<string>
using namespace std;

bool chk(string &s){
    bool hasdesimal = 0, hasexpo = 0;
    int i = 0;
    while(i<s.size()&&s[i]==' ')
        i++;
    s = s.substr(i);
    i = 0;
    if(s[i]=='-'||s[i]=='+')
        i++;
    
    while(i<s.size()&&s[i]<='9'&&s[i]>='0')
        i++;
    
    if(i==s.size())
        return 0;
    if(s[i]=='.'){
        hasdesimal = 1;
        if(i==0||s[i-1]>'9'||s[i-1]<'0')
            return 0;
        
        i++;
        if(i==s.size()||s[i]>'9'||s[i]<'0')
            return 0;
        while(i<s.size()&&s[i]<='9'&&s[i]>='0')
            i++;
    }
    
    if(i==s.size())
        return 1;
    
    if(i==0||s[i]!='e'&&s[i]!='E')
        return 0;
    hasexpo = 1;
    i++;
    if(i==s.size())
        return 0;
    if(s[i]=='-'||s[i]=='+')
        i++;
    if(i==s.size())
        return 0;
    
    while(i<s.size()&&s[i]<='9'&&s[i]>='0')
        i++;
    if(i<s.size())
        return 0;
    
    return 1;
}

int main(int argc, const char * argv[])
{
    string s;
    while(getline(cin,s)&&s!="*"){
        bool res = chk(s);
        if(res)
            cout <<s<< " is legal." << endl;
        else
            cout <<s<< " is illegal." << endl;
    }
    return 0;
}

